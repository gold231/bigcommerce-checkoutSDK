{
  "components/faceted-search/facets/range": "<form\n  class=\"facet-control facet-control-{{display}} facet-control-{{toLowerCase facet}}\"\n  method=\"get\"\n  data-faceted-search-range\n>\n  {{#each current_selected_items}}\n    <input type=\"hidden\" name=\"{{param_name}}\" value=\"{{param_value}}\"/>\n  {{/each}}\n\n  <div class=\"form-field\">\n    <input\n      class=\"form-input\"\n      name=\"min_price\"\n      min=\"0\"\n      type=\"number\"\n      value=\"{{min_price}}\"\n      placeholder=\"{{lang 'faceted_search.min_price'}}\"\n      required\n    />\n  </div>\n\n  <div class=\"form-field\">\n    <input\n      class=\"form-input\"\n      name=\"max_price\"\n      min=\"0\"\n      type=\"number\"\n      value=\"{{max_price}}\"\n      placeholder=\"{{lang 'faceted_search.max_price'}}\"\n      required\n    />\n  </div>\n\n  <div class=\"form-actions\">\n    <input\n      class=\"button button-secondary button-small\"\n      type=\"submit\"\n      value=\"{{lang 'faceted_search.update'}}\"\n    >\n  </div>\n</form>\n"
}
