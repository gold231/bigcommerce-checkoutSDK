{
  "core/forms/options/product-list": "<div\n  class=\"\n    form-field\n    form-field-options\n    form-field-product-list\n    {{#if required}}\n      form-required\n    {{/if}}\n  \"\n  data-product-attribute=\"product-list\"\n>\n  <div class=\"form-field-title\">\n    {{display_name}}\n    {{#if required}}\n      <span class=\"required-text\">{{lang 'common.required'}}</span>\n    {{/if}}\n  </div>\n\n  <div class=\"form-field-control\">\n    {{#unless values.0.image}}\n      {{!-- same as radio buttons if no image set --}}\n      {{#each values}}\n        <label class=\"form-label\" data-product-attribute-value=\"{{id}}\">\n          <input\n            class=\"form-input form-radio\"\n            name=\"attribute[{{../id}}]\"\n            type=\"radio\"\n            value=\"{{id}}\"\n            {{#if selected}}\n              checked\n              data-default\n            {{/if}}\n            {{#if ../required}}required{{/if}}\n            aria-required=\"{{required}}\"\n          >\n          <span class=\"form-label-text\">{{label}}</span>\n        </label>\n      {{/each}}\n      {{#unless required}}\n        <label class=\"form-label\">\n          <input\n            class=\"form-input form-radio\"\n            name=\"attribute[{{id}}]\"\n            type=\"radio\"\n            value=\"0\"\n            {{#if prefill '==' 0}}checked{{/if}}\n            {{#if ../required}}required{{/if}}\n            aria-required=\"{{required}}\"\n          >\n          <span class=\"form-label-text\">{{lang 'core.product.none'}}</span>\n        </label>\n      {{/unless}}\n    {{else}}\n      {{#each values}}\n        <label\n          class=\"form-label product-picklist-item\"\n          data-product-attribute-value=\"{{id}}\"\n        >\n          <input\n            class=\"form-input form-radio product-picklist-radio\"\n            name=\"attribute[{{../id}}]\"\n            type=\"radio\"\n            value=\"{{id}}\"\n            {{#if selected}}\n              checked\n              data-default\n            {{/if}}\n            {{#if ../required}}required{{/if}}\n            aria-required=\"{{required}}\"\n          >\n          <span class=\"product-picklist-item-body\">\n            <span class=\"product-picklist-image-wrap\">\n              <img\n                class=\"product-picklist-image\"\n                src=\"{{getImage image 'core-product-picklist' (cdn ../theme_settings.default_image)}}\"\n                alt=\"{{image.alt}}\"\n              >\n            </span>\n            <span class=\"product-picklist-label-text form-label-text\">\n              {{label}}\n            </span>\n          </span>\n        </label>\n      {{/each}}\n      {{#unless required}}\n        <label class=\"form-label product-picklist-item\">\n          <input\n            class=\"form-input form-radio product-picklist-radio\"\n            name=\"attribute[{{id}}]\"\n            type=\"radio\"\n            value=\"0\"\n            {{#if prefill '==' 0}}checked{{/if}}\n          >\n          <span class=\"product-picklist-item-body picklist-none\">\n            <span class=\"product-picklist-label-text form-label-text\">\n              {{lang 'product.none'}}\n            </span>\n          </span>\n        </label>\n      {{/unless}}\n    {{/unless}}\n  </div>\n</div>\n"
}
