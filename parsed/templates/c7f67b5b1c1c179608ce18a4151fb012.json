{
  "core/amp/common/quantity": "{{!\n  Quantity Widget with Increment/Decrement controls.\n\n  @param product\n         cart.item or product object\n}}\n\n<span class=\"form-field-quantity-control\" data-quantity-control=\"{{id}}\">\n  <span\n    class=\"quantity-control-action quantity-decrement\"\n    data-quantity-control-action=\"decrement\"\n  >\n    <svg width=\"10\" height=\"1\" viewBox=\"0 0 10 1\" xmlns=\"http://www.w3.org/2000/svg\" role=\"presentation\">\n      <path d=\"M0 0h10v1H0z\" fill=\"currentColor\" fill-rule=\"evenodd\"/>\n    </svg>\n  </span>\n  <input\n    class=\"form-input\"\n    type=\"number\"\n    name=\"qty[]\"\n    pattern=\"[0-9]*\"\n    value=\"{{#if quantity}}{{quantity}}{{else}}{{#if min_purchase_quantity}}{{min_purchase_quantity}}{{else}}1{{/if}}{{/if}}\"\n    min=\"{{#if min_purchase_quantity}}{{min_purchase_quantity}}{{else}}1{{/if}}\"\n    {{#if max_purchase_quantity}}max=\"{{max_purchase_quantity}}\"{{/if}}\n    data-quantity-control-input\n  >\n  <span\n    class=\"quantity-control-action quantity-increment\"\n    data-quantity-control-action=\"increment\"\n  >\n    <svg width=\"10\" height=\"10\" viewBox=\"0 0 10 10\" xmlns=\"http://www.w3.org/2000/svg\" role=\"presentation\">\n      <path d=\"M4.5 4.5H0v1h4.5V10h1V5.5H10v-1H5.5V0h-1v4.5z\" fill=\"currentColor\" fill-rule=\"evenodd\"/>\n    </svg>\n  </span>\n</span>\n"
}
